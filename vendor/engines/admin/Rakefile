require 'rake'

begin
  require 'jeweler'
  Jeweler::Tasks.new do |gem|
    gem.name = "rko-admin"
    gem.summary = %Q{The admin engine for RKO.}
    gem.description = %Q{The admin engine for RKO. A core component.}
    gem.email = "liangzhimin@51hejia.com"
    gem.homepage = "http://github.com/Gimi/rko"
    gem.authors = ["Gimi Liang"]
    # gem.add_development_dependency "thoughtbot-shoulda", ">= 0"
    gem.add_dependency 'usher'

    # why need this?
    gem.files = FileList[
      'lib/**/*', './*', 'app/**/*'
    ]
    # gem is a Gem::Specification... see http://www.rubygems.org/read/chapter/20 for additional settings
  end
  Jeweler::GemcutterTasks.new
rescue LoadError
  puts "Jeweler (or a dependency) not available. Install it with: gem install jeweler"
end
